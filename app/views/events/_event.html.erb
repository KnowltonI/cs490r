<%= div_for event do %>
	<h2> <%= link_to_unless_current event.title, event_path(event) %></h2>
	<p><strong>Title:</strong> <%= event.title %></p>
	<p><strong>Start:</strong> <%= event.start %></p>
	<p><strong>End:</strong> <%= event.end %></p>
	<p>
			<%= link_to 'Edit', edit_event_path(event) %> |
			<%= link_to 'Comment', new_event_comment_path(event) %> |
			<%= link_to 'Delete', event_path(event), method: :delete, data: {confirm: 'Really are you sua?' } %>
	</p>
<% end %>