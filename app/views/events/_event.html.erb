<%= div_for event do %>
	<h2> <%= link_to_unless_current event.name, event_path(event) %></h2>
	<p><strong>Notes:</strong> <%= event.notes %></p>
	<p><strong>Due Date:</strong> <%= event.due_date %></p>
	<%= event.due_time %>
	<p><strong>Priority:</strong><%= event.priority %></p>

	<p>
			<%= link_to 'Edit', edit_event_path(event) %> |
			<%= link_to 'Comment', new_event_comment_path(event) %> |
			<%= link_to 'Delete', event_path(event), method: :delete, data: {confirm: 'Really are you sua?' } %>
	</p>
<% end %>